{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build all files",
            "command": "g++",
            "args": [
                "-g",
                "-I",
                "${workspaceFolder}/include",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/build/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true  // 新增：设为默认
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I",
                "${workspaceFolder}/include",
                "${file}",
                "${workspaceFolder}/src/decimalToFraction.cpp",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"  // 修改：输出到 build/
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",  // 修改：移除 isDefault，避免冲突
            "detail": "调试器生成的任务。"
        }
    ]
}